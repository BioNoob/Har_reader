<Window x:Class="Har_reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" FontFamily="Jura" WindowStyle="None" MouseDown="Window_MouseDown"
        Title="Har reader" Height="500" Width="500" MinHeight="300" MinWidth="450">
    <!--<Window.Resources>
        <Style TargetType="{x:Type Control}" x:Key="baseStyle">
            <Setter Property="FontFamily" Value="Jura" />
        </Style>
    </Window.Resources>-->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Width="25" Height="25" x:Name="CloseBtn" Click="CloseBtn_Click" HorizontalAlignment="Right" Grid.ColumnSpan="2" 
                Padding="0" Margin="0,-10,0,10" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <Image Source="Resources/close.png" Margin="0" Stretch="UniformToFill" />
        </Button>
        <Label Content="Har reader" Padding="0" VerticalContentAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="0,-10,0,10" FontWeight="Bold"/>
        <Button Grid.Row="2" Height="20" Content="Select file" Width="100" Click="Button_Click" HorizontalAlignment="Left" x:Name="SelectFileBtn"/>
        <Grid Grid.Row="1" Margin="0,5,0,5" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Height="20" Content="Connect" Width="100" Click="ConnectBtn_Click" HorizontalAlignment="Left" x:Name="ConnectBtn"/>
            <Button Grid.Column="2" Height="20" Content="DisConnect" Width="100" Click="DropConnectBtn_Click" HorizontalAlignment="Left" x:Name="DropConnectBtn" IsEnabled="False"/>
            <TextBox Grid.Column="1" x:Name="Tokentxb" HorizontalAlignment="Stretch" Margin="5,0,5,0" TextWrapping="WrapWithOverflow"/>
        </Grid>
        <TextBlock  Grid.Row="2" x:Name="FilePath" Text="" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="110,0,110,0" TextWrapping="WrapWithOverflow" TextAlignment="Left" TextTrimming="CharacterEllipsis"/>
        <Button Grid.Row="2" x:Name="csvexp" IsEnabled="False" Height="20" Content="Export csv" Width="100" Click="Button_Click_1" HorizontalAlignment="Right" Grid.Column="1"/>
        <DataGrid SelectionMode="Single" SelectionUnit="FullRow" CanUserDeleteRows="False" CanUserReorderColumns="False"
            Grid.Row="3" Grid.ColumnSpan="2" Margin="0,5,0,0" AutoGenerateColumns="false" x:Name="grid" CanUserAddRows="False" HorizontalGridLinesBrush="DarkGray">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Время UTC" Binding="{Binding Path=time_normal, Mode=OneTime}" Width="0.5*" />
                <DataGridTextColumn Header="Значение" Binding="{Binding Path=GetData.game_crash_normal, Mode=OneTime}" Width="0.5*" />
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=GetData.lower}" Value="true">
                            <Setter Property="Background" Value="#CFF30021"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
        <Grid Grid.Row="4" Grid.Column="1" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" HorizontalAlignment="Right" Content="ALERT!"
                    Foreground="Yellow" VerticalAlignment="Bottom"
                    Background="Red" Padding="0" Opacity="1" Margin="0,5,5,0">
                <Label.Style>
                    <Style TargetType="Label">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=GetData.lower}" Value="true">
                                <Setter Property="Opacity" Value="0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
            <Label Content="Count of rec:" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Column="1" Padding="0" Margin="0,5,5,0"/>
            <TextBlock x:Name="Counter" Text="" VerticalAlignment="Bottom" HorizontalAlignment="Right" Padding="0" Margin="0,5,0,0" Grid.Column="2"/>
        </Grid>

    </Grid>
</Window>
